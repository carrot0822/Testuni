
.loginIn {
	height: 100%;
	width: 100%;
	position: absolute;
} 
/* title */
.system-title {
	height: 30%;  
	width: 100%; 	
	padding-top: 50rpx;
	padding-left: 40rpx;
	color:#fff;
	background-color:#1C87FF;
}
.system-title .eng{ 
	position: absolute;
	top: 6%;
	font-size:60rpx;
	font-family:Helvetica;
	font-weight:bold;
}
.system-title .chn{  
	position: absolute;
	top: 12%;
	font-size:40rpx;
	font-family:PingFang SC;
	font-weight:bold;
} 
/* login */
.system-login{
	height: 76%;
	width: 90%; 	 
	position: absolute;
	top: 20%;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%); 
	background:rgba(255,255,255,1);
	box-shadow:0px 10px 40px 0px rgba(0, 0, 0, 0.1);
	border-radius:30rpx;
}
.system-login input { 
	border-bottom: 1px solid #D5D5D5;  
	margin: 10rpx auto; 
	padding-left:1rem;
	width: 86%;
	height: 2rem;
	font-size: 30rpx;
}
.system-login .login_text{ 
	margin-top: 50rpx;
	margin-left: 40rpx;
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(153,153,153,1);
}
.system-login button { 
	margin: 1rem auto;
	height: 2.6rem;
	width: 86%; 
	background:rgba(28,135,255,1); 
	border-radius: 40rpx;
	font-size: 30rpx;
	line-height: 2.6rem;
}
.system-login button::after{
	border: none;
}

