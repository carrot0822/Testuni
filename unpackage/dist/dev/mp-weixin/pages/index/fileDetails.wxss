.uni-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  box-shadow: 0 0 0 transparent;
  margin: 30px 20px;
  background-color: #ffffff;
  position: relative;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  box-shadow: 0px 10px 30rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
  overflow: hidden;
}
.uni-card__header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 24rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #E5E5E5;
}
.uni-card__header-extra-img {
  height: 40rpx;
  width: 40rpx;
  background: #1C87FF;
  padding: 10rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}
.uni-card__header-title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1c87ff;
}
.uni-card__content {
  position: relative;
  color: #333;
  padding: 20rpx 40rpx;
}
.uni-card__content--pd {
  padding: 24rpx;
}
.uni-card__content--list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 30rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.uni-card__content--title {
  width: 30%;
  font-size: 30rpx;
  color: #b5b5b5;
}
.uni-card__content--content {
  text-align: right;
  width: 60%;
  height: 40rpx;
  font-size: 30rpx;
  color: #656565;
  white-space: nowrap;
}
.uni-card__btn {
  text-align: center;
  width: 180rpx;
  padding: 10rpx 20rpx;
  background: #1c87ff;
  border-radius: 31rpx;
  color: #FFF;
}
.circle_item {
  width: 14rpx;
  height: 14rpx;
  display: inline-block;
  border-radius: 50%;
  margin: 6rpx 20rpx;
}

