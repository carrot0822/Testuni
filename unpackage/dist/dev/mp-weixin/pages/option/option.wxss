	background:-webkit-linear-gradient(bottom,rgba(11,255,212,1),rgba(0,227,123,1)); 
	background:linear-gradient(0deg,rgba(11,255,212,1),rgba(0,227,123,1));
	box-shadow:0px 10px 30px 0px rgba(0,227,123,0.1);
}
image.openSh{ 
	background:-webkit-linear-gradient(bottom,rgba(255,214,71,1),rgba(255,174,46,1)); 
	background:linear-gradient(0deg,rgba(255,214,71,1),rgba(255,174,46,1));
	box-shadow:0px 10px 30px 0px rgba(255,174,46,0.1);
}
image.closeSh{ 
	background:-webkit-linear-gradient(bottom,rgba(48,204,255,1),rgba(0,222,255,1)); 
	background:linear-gradient(0deg,rgba(48,204,255,1),rgba(0,222,255,1));
